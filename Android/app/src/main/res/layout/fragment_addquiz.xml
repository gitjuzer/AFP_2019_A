<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:stretchColumns="1"
    android:background="#ffffff"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Quiz question(s)"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_toplist_bg"
        android:backgroundTint="#006dcc"
        android:padding="10dp"
        android:textColor="#000000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/answers_rounded_corner"
        android:backgroundTint="#f1f1f1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:stretchColumns="1"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a question:"
        android:textSize="20dp"
        android:textColor="#000000"
        />
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:backgroundTint="#000000"

    />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Add answer options:"
            android:textSize="20dp"
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="#000000"
            android:text="1."
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="#000000"
            android:text="2."
            android:textColor="#000000"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="#000000"
            android:text="3."
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/addQuestionBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="+"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:background="@drawable/circlebutton"
            android:textAllCaps="false"

             />
    </LinearLayout>

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TableRow>
            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Next question"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:background="@drawable/answers_rounded_corner"

                android:textColor="#000000"
                android:textSize="20sp"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="Finish"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:background="@drawable/answers_rounded_corner"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:textSize="20sp"
                />
        </TableRow>


    </TableLayout>

</LinearLayout>